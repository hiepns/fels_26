<% provide(:title, 'Edit word') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Edit word</h3>
      </div>
      <%= form_for [:admin, @word], url: admin_wordlist_path do |f| %>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :category_id %>
            <%= f.select :category_id, options_for_select(@categories, @word.category_id), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :word %>
            <%= f.text_field :word, class: 'form-control' %>
          </div>

            <%= f.fields_for :answers do |ans| %>
              <div class="form-group">
                <%= ans.label :answer %>
                <%= ans.text_field :answer %>
                <%= ans.label :correct %>
                <%= ans.check_box :correct %>
              </div>
          <% end %>  
          <div class="form-group">
            <%= f.submit "Update", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
</div>